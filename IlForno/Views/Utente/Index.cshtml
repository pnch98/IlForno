@model IEnumerable<IlForno.Models.Utente>

@{
    ViewData["Title"] = "Index";
    Layout = "_Layout2";
}

<h1>Lista utenti</h1>

<p>
    <a class="text-decoration-none thirdColor" asp-action="Create">Create New</a>
</p>
<table class="table bgFornoLight rounded">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Username)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Password)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Role)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Username)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Password)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Role)
                </td>
                <td>
                    <a class="text-decoration-none thirdColor" asp-action="Edit" asp-route-id="@item.Id">Edit</a> |
                    <a class="text-decoration-none thirdColor" asp-action="Details" asp-route-id="@item.Id">Details</a> |
                    <a class="text-decoration-none thirdColor" asp-action="Delete" asp-route-id="@item.Id">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
